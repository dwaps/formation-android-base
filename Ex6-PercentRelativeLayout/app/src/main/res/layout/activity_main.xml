<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/bt_header"
        app:layout_widthPercent="100%"
        app:layout_heightPercent="20%"
        android:text="@string/header"/>

    <Button
        android:id="@+id/bt_nav"
        android:layout_below="@id/bt_header"
        app:layout_widthPercent="20%"
        app:layout_heightPercent="60%"
        android:text="@string/nav"/>

    <Button
        android:id="@+id/bt_content"
        android:layout_below="@id/bt_header"
        android:layout_toRightOf="@id/bt_nav"
        app:layout_widthPercent="60%"
        app:layout_heightPercent="60%"
        android:text="@string/content"/>

    <Button
        android:id="@+id/bt_aside"
        android:layout_below="@id/bt_header"
        android:layout_toRightOf="@id/bt_content"
        app:layout_widthPercent="20%"
        app:layout_heightPercent="60%"
        android:text="@string/aside"/>

    <Button
        android:id="@+id/bt_footer"
        android:layout_below="@id/bt_aside"
        app:layout_widthPercent="100%"
        app:layout_heightPercent="20%"
        android:text="@string/footer"/>

</android.support.percent.PercentRelativeLayout>