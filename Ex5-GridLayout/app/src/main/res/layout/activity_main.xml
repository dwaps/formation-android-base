<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="horizontal"
    android:columnCount="4"
    android:rowCount="4"
    tools:context="fr.dwaps.ex5_gridlayout.MainActivity">

    <Button
        android:id="@+id/bt_header"
        android:layout_column="0"
        android:layout_columnSpan="4"
        android:layout_row="0"
        android:layout_gravity="fill"
        android:text="@string/header"/>

    <Button
        android:id="@+id/bt_nav"
        android:layout_column="0"
        android:layout_row="1"
        android:layout_rowSpan="2"
        android:layout_gravity="fill"
        android:layout_rowWeight="80"
        android:text="@string/nav"/>

    <Button
        android:id="@+id/bt_content"
        android:layout_column="1"
        android:layout_columnSpan="2"
        android:layout_row="1"
        android:layout_rowSpan="2"
        android:layout_gravity="fill"
        android:layout_rowWeight="80"
        android:text="@string/content"/>

    <Button
        android:id="@+id/bt_aside"
        android:layout_column="3"
        android:layout_row="1"
        android:layout_gravity="fill_vertical"
        android:layout_rowWeight="35"
        android:text="@string/aside"/>

    <Button
        android:id="@+id/bt_footer"
        android:layout_column="0"
        android:layout_columnSpan="4"
        android:layout_row="3"
        android:layout_gravity="fill"
        android:layout_rowWeight="10"
        android:text="@string/footer"/>

</GridLayout>
